@model IdeasAPI.Models.Login
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge; chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <title>Ideas</title>

    <link href="Content/css/main.css" rel="stylesheet">
</head>
<body class="login">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-lg-offset-4 col-sm-6 col-sm-offset-3">
                <div class="login-form">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group">
                            <input type="text" name="Username" id="Username" placeholder="Enter your name" value="" class="form-control login-field">
                            <label for="Username" class="login-field-icon fui-user"></label>
                        </div>

                        <div class="form-group">
                            <input type="password" name="Password" id="Password" placeholder="Password" value="" class="form-control login-field">
                            <label for="Password" class="login-field-icon fui-lock"></label>
                        </div>

                        <button type="submit" class="btn btn-primary btn-lg btn-block" value="">Log in</button>
                    }
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">Lovingly made in <a href="http://www.nortal.com" class="logo">
            <img src="Content/img/nortal.png" alt="Nortal" width="60px"></a></div>
    </footer>
</body>
</html>
